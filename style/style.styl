/* STYLE Document */
body
  background: lightgray
  font-family: tahoma, sans-serif
	color: black

.page_area
  text-align: left
	margin: 20px auto
	padding: 0
	background: lightgray
	width: 100px

h1
  color: white

.logo_top_banner h1:hover
  color: #0E6EB8

a
  color: white

/* unvisited link */
a:link
  color: white

/* visited link */
a:visited
    color: white

/* mouse over link */
a:hover
    color: #0E6EB8

/* selected link */
a:active
    color: white

.top_banner
  display: flex
  border-radius: 0.5em
  background: black
  margin-top: 20px
  margin-left: 25px
  margin-right: 25px
  padding: 20px


  flex-wrap: wrap
  //justify-content: center

.logo_top_banner
  display: flex
  /*background: gray*/
  padding-top: 5px
  margin-right: 1em

  flex: 1 1 2%

.button_top_banner
  display: flex
  border-radius: 0.5em
  margin-right: 1em
  background: black

  flex: 1 1 25%

  flex-wrap: row wrap
  justify-content: center

.right_container_top_banner
  display: flex

  flex: 1 1 25%
  flex-wrap: wrap
  justify-content: flex-end
  align-items: center

.search_bar_top_banner
  display: flex
  /*background: gray*/
  padding-top: 5px
  margin-right: 1em

.user_top_banner
  display: flex
  /*background: gray*/
  align-items: center

.exit_button_top_banner
  display: flex
  margin-left: 1em
  padding-top: 5px

.button_area
  display: flex
  border-radius: 0.5em
  background: black
  margin-top: 10px
  margin-left: 25px
  margin-right: 25px
  padding: 15px 0 15px 5px

  flex-wrap: wrap
  justify-content: center

.big.blue.ui.button
  display: flex
  margin: 0.10em

.action_area
  background: gray
  border-radius: 0.5em
  margin-top: 10px
  margin-left: 25px
  margin-right: 25px
  padding: 20px
  /*height: 650px*/

.ui.segment
  margin: 2px
  width: 150px

@media all and (max-width 82em)

  .logo_top_banner
    flex: 1 1 100%

  .button_top_banner
    align-items: center

@media all and (max-width 55em)
  .right_container_top_banner
    flex: 1 1 100%
    justify-content: center

@media all and (max-width 38em)
  .button_top_banner
    align-items: flex-start
    width: 50%
    flex-direction: column

  .big.blue.ui.button
    width: 100%

  .right_container_top_banner
    flex-direction: column

  .search_bar_top_banner
    justify-content: center

  .user_top_banner
    justify-content: center

  .button_area
    flex: 1 1 90%
    flex-direction: column
